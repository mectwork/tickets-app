{% extends 'base.html.twig' %}

{% block title %} Tickets: Usuarios {% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-10" >
            <div class="list-group">
                <div role="alert" class="alert alert-info alert-dismissible fade in"> 
                    Mensaje flash aquí...!!!
                    <button aria-label="Close" data-dismiss="alert" class="close" type="button">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-2" >
            <div class="list-group">
                <a class="list-group-item" href="{{ path('usuario_new') }}"><span aria-hidden="true" class="glyphicon glyphicon-plus"> </span> Nuevo Usuario</a>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Usuario</th>
                    <th>Correo</th>
                    <th>Habilitado</th>
                    <th>Grupo</th>
                    <th>Empresa</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <td>
                        <a href="{{ path('usuario_show', { 'id': user.id }) }}">{{ user.nombrecompleto }}</a></br>
                    </td>
                    <td>
                        {{ user.username }}
                    </td>
                    <td>
                        {{ user.email }}
                    </td>
                    <td>
                         {% if user.enabled == 1 %}
                            <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
                         {% else %}
                            <span class="text-danger glyphicon glyphicon-ban-circle" aria-hidden="true"></span>
                         {% endif %}
                    </td>
                    <td>
                        {% for user in user.groups %}
                            {{ user.name }},
                        {%endfor%}
                    </td>
                    <td>
                        {{ user.empresa.nombre }}
                    </td>
                    <td class="table-td-options">
                        <a href="{{ path('usuario_show', { 'id': user.id }) }}" class="btn btn-info" aria-label="Left Align">
                          <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
                        </a>
                        <a href="{{ path('usuario_edit', { 'id': user.id }) }}" class="btn btn-success" aria-label="Left Align">
                          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a href="#" class="btn btn-danger" aria-label="Left Align">
                          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
