{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(edit_form) }}
        <div class="form-group">
            <h4><small>Nombre de la Empresa:</small></h4>
            {{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control'}}) }}

            <h4><small>Proyectos de la empresa:</small></h4>
            <h4>
                {% for proyecto in empresa.proyectos %}
                    <a href="#"><span class="label label-default"> {{ proyecto.nombre }} </span></a>&nbsp;
                {% else %}
                    No tiene proyectos
                {% endfor %}
            </h4>
            <hr>
            <button type="submit" class="btn btn-default">Editar</button>
        </div>
    {{ form_end(edit_form) }}


{% endblock %}
