{% extends 'frontend.html.twig' %}

{% block title %}  {% endblock %}
{% block body %}
    <h3 class="header">Actividades vinculadas al usuario {{ app.user.username | upper }}</h3>

    <table class="table table-striped table-responsive">
        <tbody>
        {% for actividad in actividades %}
            <tr>
                <td>
                    <h4>
                        <a href="{{ path('front_actividad_show', { 'actividad': actividad.id }) }}">{{ actividad.titulo }}</a>
                    </h4>
                    <p>{{ actividad.contenido }}</p>
                    <p align="right">
                        <a href="{{ path('front_actividad_show', { 'actividad': actividad.id }) }}"> Ver detalles</a>
                    </p>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}


