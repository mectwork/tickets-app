{% extends 'frontend.html.twig' %}

{% block title %}  {% endblock %}
{% block body %}
    <h3 class="header">Proyectos vinculados al usuario {{ app.user.username | upper }}</h3>
    <div class="table-responsive">
        <table class="table table-striped">
            <tbody>
            {% for proyecto in proyectos %}
                <tr>
                    <td>
                        <a href="{{ path('front_actividades_list', { 'proyecto': proyecto.id }) }}">{{ proyecto.nombre }}</a></br>
                    </td>
                    <td class="table-td-options">
                        <a href="{{ path('front_actividades_list', { 'proyecto': proyecto.id }) }}"> Ver Actividades
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}


