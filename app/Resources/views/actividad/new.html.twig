{% extends 'base.html.twig' %}

{% block body %}
    <h1>Actividad creation</h1>

    {{ form_start(form) }}
    {{ form_row(form.proyecto) }}
    {{ form_row(form.estado) }}
    {{ form_row(form.tipo) }}
    {{ form_row(form.titulo) }}
    {{ form_row(form.contenido) }}
    <button type="submit" class="btn btn-default">Guardar</button>
    <a href="{{ path('actividad_index') }}" class="btn btn-default">Cancelar</a>
    {{ form_end(form) }}
{% endblock %}
