                <td>{{ actividad.titulo }}</td>
                <td>{{ actividad.contenido }}</td>
                <td>{{ actividad.tipo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('actividad_show', { 'id': actividad.id }) }}">show</a>
