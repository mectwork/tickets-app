{% extends 'base.html.twig' %}

{% block body %}
    <h1>Actividad</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actividad.id }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ actividad.estado }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ actividad.titulo }}</td>
            </tr>
            <tr>
                <th>Contenido</th>
                <td>{{ actividad.contenido }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ actividad.tipo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('actividad_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('actividad_edit', { 'id': actividad.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
