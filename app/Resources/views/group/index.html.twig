{% extends 'base.html.twig' %}

{% block title %} Tickets: Grupos {% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-10" >
            <div class="list-group">
                <div role="alert" class="alert alert-info alert-dismissible fade in"> 
                    Mensaje flash aquí...!!!
                    <button aria-label="Close" data-dismiss="alert" class="close" type="button">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="list-group">
                <a class="list-group-item" href="{{ path('group_new') }}"><span aria-hidden="true" class="glyphicon glyphicon-plus"> </span> Nuevo Grupo</a>
            </div>  
        </div>
    </div>
    <div class="table-responsive">
        <table class="table">
            <tbody>
                {% for group in groups %}
                <tr>
                    <td>
                        <a href="{{ path('group_show', {'id': group.getId()} ) }}">{{ group.getName() }}</a></br>
                        {% for rol in group.roles %}
                            <a href="#"><span class="label label-default"><span class="glyphicon glyphicon-credit-card" aria-hidden="true"></span> {{ rol }} </span></a>&nbsp;
                        {% else %}
                            No tiene roles
                        {% endfor %}
                    </td>
                    <td class="table-td-options">
                        <a href="{{ path('group_show', {'id': group.getId()}) }}" class="btn btn-info" aria-label="Left Align">
                          <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
                        </a>
                        <a href="{{ path('group_edit', {'id': group.getId()}) }}" class="btn btn-success" aria-label="Left Align">
                          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a href="#" class="btn btn-danger" aria-label="Left Align">
                          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
