{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(edit_form) }}
        <div class="form-group">
            <h4><small>Nombre del proyecto:</small></h4>
            {{ form_widget(edit_form.nombre, {'attr': {'class': 'form-control'}}) }}
            <h4><small>Listado de empresas disponibles:</small></h4>
            
            {{ form_widget(edit_form.empresa, {'attr': {'class': 'form-control'}}) }}

            <h4><small>Empresa del proyecto:</small></h4>
            <h4>
                {% if proyecto.empresa.nombre %}
                    <a href="#"><span class="label label-default"> {{ proyecto.empresa.nombre }} </span></a>&nbsp;
                {% else %}
                    No pertenece a ninguna empresa
                {% endif %}
            </h4>
            <hr>
            <button type="submit" class="btn btn-default">Editar</button>
        </div>
    {{ form_end(edit_form) }}


{% endblock %}
