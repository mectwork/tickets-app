{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
        <div class="form-group">
            <h4><small>Nombre del proyecto:</small></h4>
            {{ form_widget(form.nombre, {'attr': {'class': 'form-control', 'placeholder': 'Nombre'}}) }}
            
            <h4><small>Listado de empresas disponibles:</small></h4>
            {{ form_widget(form.empresa, {'attr': {'class': 'form-control'}}) }}

        </div>

        <hr>
        
        <button type="submit" class="btn btn-default">Guardar</button>
        <button type="reset" class="btn btn-default">Cancelar</button>
    {{ form_end(form) }}
{% endblock %}
